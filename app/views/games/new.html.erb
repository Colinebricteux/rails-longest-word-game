<div class="main-container">

  <h1>The longuest word game</h1>

  <h2>New game !</h2>

  <h3>Here are 10 random letters :</h3>

  <div class="letters"><% @letters.each do |letter| %>
    <p class="letter"><%= letter %></p>
    <% end %>
  </div>

  <h3>What is the longuest word you can find ?</h3>

  <form class="form" action="/score" method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
    <input class="input-box" type="text" name="word" placeholder="Type your guess here">
    <input class="submit" type="submit" value="Find your score !">
  </form>

</div>
